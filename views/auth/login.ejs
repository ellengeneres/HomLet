<%- include('../partials/header') %>

<div class="container" style="padding: 2rem 0;">
    <div class="form-container">
        <div style="text-align: center; margin-bottom: 2rem;">
            <h2 style="font-size: 2.5rem; margin-bottom: 1rem; color: #667eea;">Sign in to your account</h2>
            <p style="color: rgba(255, 255, 255, 0.7);">
                Or
                <a href="/auth/client-register" style="color: #667eea; text-decoration: none;">register as a client</a>
                /
                <a href="/auth/agent-register" style="color: #667eea; text-decoration: none;">agent</a>
            </p>
        </div>

        <form action="/auth/login" method="POST">
            <div class="form-group">
                <label for="email" class="form-label">Email address</label>
                <input id="email" name="email" type="email" autocomplete="email" required class="form-input">
            </div>

            <div class="form-group">
                <label for="password" class="form-label">Password</label>
                <input id="password" name="password" type="password" autocomplete="current-password" required class="form-input">
            </div>

            <button type="submit" class="btn btn-primary w-full">Sign in</button>
        </form>

        <div style="margin-top: 2rem; text-align: center;">
            <div style="position: relative; margin: 1.5rem 0;">
                <div style="position: absolute; inset: 0; display: flex; align-items: center;">
                    <div style="width: 100%; border-top: 1px solid rgba(255, 255, 255, 0.3);"></div>
                </div>
                <div style="position: relative; display: flex; justify-content: center;">
                    <span style="background: linear-gradient(135deg, #0f0f23 0%, #1a1a2e 50%, #16213e 100%); padding: 0 1rem; color: rgba(255, 255, 255, 0.7);">Quick Access</span>
                </div>
            </div>

            <div style="background: rgba(102, 126, 234, 0.1); border: 1px solid rgba(102, 126, 234, 0.3); border-radius: 8px; padding: 1rem; margin-top: 1rem;">
                <p style="color: rgba(255, 255, 255, 0.8); font-size: 0.9rem;">
                    <strong>Admin Access:</strong> 
                    <span style="color: #667eea;">admin@example.com / password</span>
                </p>
            </div>
        </div>
    </div>
</div>

<%- include('../partials/footer') %>