

<!-- Hero Section -->
<section class="bg-gradient-to-r from-blue-600 to-purple-600 text-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-20">
        <div class="text-center">
            <h1 class="text-4xl md:text-6xl font-bold mb-6">Find Your Perfect Home</h1>
            <p class="text-xl md:text-2xl mb-8">Connect with trusted real estate agents and discover your dream property</p>
            <div class="space-x-4">
                <a href="/houses" class="bg-white text-blue-600 px-8 py-3 rounded-lg font-semibold hover:bg-gray-100 transition duration-300">🏠 Find a House</a>
                <a href="/auth/agent-register" class="bg-transparent border-2 border-white text-white px-8 py-3 rounded-lg font-semibold hover:bg-white hover:text-blue-600 transition duration-300">Become an Agent</a>
            </div>
        </div>
    </div>
</section>

<!-- About Section -->
<section class="py-16">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-12">
            <h2 class="text-3xl font-bold text-gray-900 mb-4">What is HomLet?</h2>
            <p class="text-lg text-gray-600 max-w-3xl mx-auto">
                HomLet is a revolutionary platform that connects property seekers with verified real estate agents. 
                We make it easy to find your perfect home while ensuring agents get fair compensation for their services.
            </p>
        </div>
        
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
            <div class="text-center">
                <div class="bg-blue-100 rounded-full w-16 h-16 mx-auto mb-4 flex items-center justify-center">
                    <span class="text-2xl">🏡</span>
                </div>
                <h3 class="text-xl font-semibold mb-2">Browse Properties</h3>
                <p class="text-gray-600">Explore thousands of properties with detailed photos and videos</p>
            </div>
            
            <div class="text-center">
                <div class="bg-green-100 rounded-full w-16 h-16 mx-auto mb-4 flex items-center justify-center">
                    <span class="text-2xl">👥</span>
                </div>
                <h3 class="text-xl font-semibold mb-2">Connect with Agents</h3>
                <p class="text-gray-600">Get direct access to verified real estate professionals</p>
            </div>
            
            <div class="text-center">
                <div class="bg-purple-100 rounded-full w-16 h-16 mx-auto mb-4 flex items-center justify-center">
                    <span class="text-2xl">💰</span>
                </div>
                <h3 class="text-xl font-semibold mb-2">Secure Payments</h3>
                <p class="text-gray-600">Safe and secure payment system for unlocking agent contacts</p>
            </div>
        </div>
    </div>
</section>

<!-- Featured Properties -->
<% if (featuredProperties && featuredProperties.length > 0) { %>
<section class="py-16 bg-gray-100">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-12">
            <h2 class="text-3xl font-bold text-gray-900 mb-4">Featured Properties</h2>
            <p class="text-lg text-gray-600">Discover some of our most popular listings</p>
        </div>
        
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
            <% featuredProperties.forEach(property => { %>
                <div class="bg-white rounded-lg shadow-md overflow-hidden hover:shadow-lg transition duration-300">
                    <img src="/uploads/properties/<%= property.images[0] %>" alt="<%= property.title %>" class="w-full h-48 object-cover">
                    <div class="p-6">
                        <h3 class="text-xl font-semibold mb-2"><%= property.title %></h3>
                        <p class="text-gray-600 mb-2"><%= property.location.area %>, <%= property.location.state %></p>
                        <p class="text-2xl font-bold text-blue-600 mb-4">₦<%= property.price.toLocaleString() %></p>
                        <p class="text-gray-700 mb-4"><%= property.description.substring(0, 100) %>...</p>
                        <a href="/property/<%= property._id %>" class="bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700 transition duration-300">View Details</a>
                    </div>
                </div>
            <% }); %>
        </div>
        
        <div class="text-center mt-12">
            <a href="/houses" class="bg-blue-600 text-white px-8 py-3 rounded-lg font-semibold hover:bg-blue-700 transition duration-300">View All Properties</a>
        </div>
    </div>
</section>
<% } %>

<!-- CTA Section -->
<section class="py-16 bg-blue-600 text-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
        <h2 class="text-3xl font-bold mb-4">Ready to Find Your Dream Home?</h2>
        <p class="text-xl mb-8">Join thousands of satisfied customers who found their perfect property through HomLet</p>
        <div class="space-x-4">
            <a href="/auth/client-register" class="bg-white text-blue-600 px-8 py-3 rounded-lg font-semibold hover:bg-gray-100 transition duration-300">Get Started as Client</a>
            <a href="/auth/agent-register" class="bg-transparent border-2 border-white text-white px-8 py-3 rounded-lg font-semibold hover:bg-white hover:text-blue-600 transition duration-300">Join as Agent</a>
        </div>
    </div>
</section>